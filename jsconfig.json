{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths":{
            "@components/*": ["src/components/*"],
            "@components/icons": ["src/components/icons/index.js"],
            "@components/icon": ["src/components/icons/icon.js"],
            "@styles": ["styles/globals.css"],
            "@config": ["src/config.js"]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}